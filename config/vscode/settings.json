{
    // Files
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    // Git
    "git.autofetch": "all",
    // Editor
    "editor.fontFamily": "FiraCode-Retina",
    "editor.fontLigatures": true,
    "editor.fontWeight": "600",
    "editor.fontSize": 11.5,
    "editor.tabSize": 2,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.renderWhitespace": "boundary",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.codeLensFontFamily": "FiraCode-Retina",
    "editor.inlineSuggest.enabled": true,
    "editor.linkedEditing": true,
    // Workbench
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Shades of Purple",
    "workbench.sideBar.location": "right",
    "workbench.preferredDarkColorTheme": "Shades of Purple",
    "workbench.preferredHighContrastColorTheme": "Shades of Purple",
    "workbench.preferredLightColorTheme": "Shades of Purple",
    // Debug & Terminal
    "debug.console.fontFamily": "FiraCode-Retina",
    "debug.console.fontSize": 12,
    "debug.allowBreakpointsEverywhere": true,
    "terminal.integrated.fontFamily": "FiraCode-Retina",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "600",
    // Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // Diff Editor
    "diffEditor.codeLens": true,
    // Explorer
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    // Breadcrumbs
    "breadcrumbs.enabled": true,
    // PHP
    "php.validate.executablePath": "/usr/bin/php",
    // Extensions
    // Color Highlight
    "color-highlight.languages": [
        "*"
    ],
    "color-highlight.matchWords": true,
    "color-highlight.matchRgbWithNoFunction": true,
    // Project Manager
    "projectManager.tags": [
        "Personnel",
        "Travail",
        "Cours"
    ],
    "projectManager.git.baseFolders": [
        "/Users/mrodrigue/Desktop/Projets"
    ],
    "projectManager.any.baseFolders": [
        "/Users/mrodrigue/Desktop/Projets"
    ],
    "projectManager.any.ignoredFolders": [
        "node_modules",
        "out",
        "typings",
        "test",
        ".git"
    ],
    "projectManager.any.maxDepthRecursion": 1,
    "projectManager.git.maxDepthRecursion": 1,
    "projectManager.groupList": true,
    // Live Share
    "liveshare.guestApprovalRequired": true,
    "liveshare.allowGuestDebugControl": true,
    "liveshare.allowGuestTaskControl": true,
    // TabNine
    "tabnine.experimentalAutoImports": true
}